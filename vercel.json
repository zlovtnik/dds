{
    "version": 2,
    "builds": [
        {
            "src": "vercel-build.sh",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/graphiql",
            "dest": "/functions/main"
        },
        {
            "src": "/graphql",
            "dest": "/functions/main"
        },
        {
            "src": "/(.*)",
            "dest": "/functions/main"
        }
    ],
    "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "info",
        "PORT": "0",
        "SQLX_OFFLINE": "false"
    },
    "build": {
        "env": {
            "RUSTFLAGS": "-C target-cpu=native",
            "SQLX_OFFLINE": "true"
        }
    }
}