{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.rs",
            "use": "vercel-rust@3.0.0"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/graphql",
            "dest": "/api/graphql"
        },
        {
            "src": "/graphiql",
            "dest": "/api/graphql"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "info",
        "SQLX_OFFLINE": "true"
    }
}